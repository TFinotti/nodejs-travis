<div id="form">
    <p>Please login to your account</p>
    <hr />
    <form action="/signup" method="post">
        <div class="form-group">
            <label for="form_username">Username</label>
            <input id="form_username" type="text" name="username" />
        </div>
        <div class="form-group">
            <label for="form_email">Email</label>
            <input id="form_email" type="text" name="email" />
        </div>
        <div class="form-group">
            <label for="form_password">Password</label>
            <input id="form_password" type="password" name="password" />
        </div>
        <div class="form-group">
            <label for="form_confirm">Confirm Password</label>
            <input id="form_confirm" type="password" name="confirm" />
        </div>
        <button class="btn btn-primary btn-block" type="submit" value="Submit">Create New User</button>
    </form>
    <hr />
    <button class="btn btn-success btn-block" href="/login" onClick='document.location.href="/login"'>
        Login
    </button>
</div>